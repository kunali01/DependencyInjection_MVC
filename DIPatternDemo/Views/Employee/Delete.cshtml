@model DIPatternDemo.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this employee?</h4>
<hr />

<div>
    <h4>@Model.Name</h4>
    <p><strong>Position:</strong> @Model.Position</p>
    <p><strong>Salary:</strong> @Model.Salary</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
</form>
